# Where history is stored
HISTFILE=$HOME/.zsh_history

# Number of commands kept in memory
HISTSIZE=100000

# Number of commands saved to disk
SAVEHIST=100000

# History behavior
setopt APPEND_HISTORY        # append, don't overwrite
setopt INC_APPEND_HISTORY    # write immediately, not on exit
setopt SHARE_HISTORY         # share between all shells
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE    # cmds starting with space not saved
setopt HIST_REDUCE_BLANKS


eval "$(starship init zsh)"
eval "$(atuin init zsh)"
eval "$(zoxide init zsh)"
source $(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh

alias rm='echo "This is not the command you are looking for. Use \`trash\` instead."; false'
alias cat="bat --theme auto:system"
alias cd="z"
alias ls="eza --icons=always"
alias aws_sso_stan="aws sso login --sso-session stan"
